<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp"
    tools:context=".activity.RegisterActivity"
    android:background="#191970">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"
        android:id="@+id/top_guide"


        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92"
        android:id="@+id/bottom_guide"


        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/top_guide"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guide"

        >


    <ImageView
        android:id="@+id/registrationpageicon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/final_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        />



    <EditText
        android:id="@+id/usernamenew"
        android:layout_below="@+id/registrationpageicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:textColorHint="#7208be"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/username_default"
        android:drawablePadding="7dp"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#ffffff"






        />

    <EditText
        android:id="@+id/emailnew"
        android:layout_below="@+id/usernamenew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#7208be"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/email_default"
        android:drawablePadding="7dp"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#ffffff"






        />


    <EditText
        android:id="@+id/passwordnew"
        android:layout_below="@+id/emailnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password (minimum six characters)"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/password_default"
        android:drawablePadding="7dp"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:textColorHint="#7208be"





        />

    <EditText
        android:id="@+id/passwordnew2"
        android:layout_below="@+id/passwordnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re-enter Password"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:drawableStart="@drawable/renter_password_default"
        android:drawablePadding="7dp"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:textColorHint="#7208be"





        />









   <!-- <EditText
        android:id="@+id/phonenew"
        android:layout_below="@+id/emailnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="number"
        android:maxLength="10"







        /> -->


    <Button
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/passwordnew2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_buttons"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp"






        />

        <TextView
            android:id="@+id/already_regis"
            android:layout_below="@+id/registerbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already registered? Login here."
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_marginTop="6dp"


            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>