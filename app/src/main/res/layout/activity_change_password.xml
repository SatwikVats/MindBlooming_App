<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.Change_password"
    android:padding="20dp"
    android:background="#191970">



        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04"
            android:id="@+id/top_guide"


            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.92"
            android:id="@+id/bottom_guide"


            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/top_guide"
            app:layout_constraintBottom_toTopOf="@+id/bottom_guide"

            >


            <ImageView
                android:id="@+id/registrationpageicon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/final_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                />




            <EditText
                android:id="@+id/et_current_password"
                android:layout_below="@+id/registrationpageicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="23dp"
                android:drawableStart="@drawable/password_default"
                android:drawablePadding="7dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textColorHint="#7208be"






                />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New password"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="textPassword"
                android:layout_below="@+id/et_current_password"
                android:layout_marginTop="11dp"

                android:drawableStart="@drawable/password_default"
                android:drawablePadding="7dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textColorHint="#7208be"





                />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="textPassword"
                android:layout_below="@+id/et_new_password"
                android:layout_marginTop="11dp"

                android:drawableStart="@drawable/password_default"
                android:drawablePadding="7dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_marginBottom="23dp"
                android:textColor="#ffffff"
                android:textColorHint="#7208be"






                />

            <Button
                android:id="@+id/btn_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_confirm_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"

                android:text="Change password"
                android:background="@drawable/bg_buttons"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:padding="5dp"

                android:layout_marginBottom="5dp"







                />















        </RelativeLayout>





